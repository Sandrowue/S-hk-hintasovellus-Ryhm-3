<table>
    <tr>
        <th>Päivä</th>
        <th>Tunti</th>
        <th>Hinta (snt/kWh)</th>
    </tr>
    {{#each tableData}}
    <tr><td>{{day}}</td>
        <td>{{hour}}</td>
        <td>{{price}}</td>
    </tr>
    {{/each}}
</table>

<!-- Chart.js -->

<div>
    <canvas id="sähköhinta" style="width:80%;max-width:700px;height80%;max_height:600px;margin:auto"></canvas> 
</div>

<div>
    <canvas id="bartaulu1" style="width:80%;max-width:700px;height80%;max_height:350px"></canvas> 
</div>

<div>
    <canvas id="linetaulu1" style="width:80%;max-width:700px;height80%;max_height:350px"></canvas> 
</div>

<div>
    <canvas id="linetaulu2" style="width:80%;max-width:700px;height80%;max_height:350px"></canvas> 
</div>

<script
    src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script> 
<script>   
    Chart.defaults.global.defaultFontColor = "#000";
    const xValues = {{chartHours}};
    const yValues = {{chartPrices}};
    // const xValues = [13, 14, 15, 16];
    // const yValues = [31.44, 32.1, 30.5, 29.99];
    const ylaRaja = 24;
    const barColors = [];
    const bordColors = [];

    for(i = 0; i < yValues.length; i++){
        if(yValues[i] <= 0) {barColors.push("rgba(10, 185, 0, 0.7)"),bordColors.push("rgba(0, 167, 12, 1)")}
        if(yValues[i] > 0 && yValues[i] <=ylaRaja) {barColors.push("rgb(34, 88, 122, 0.7)"),bordColors.push("rgb(24, 61, 85, 1)")}
        if(yValues[i] >= ylaRaja) {barColors.push("rgba(255, 0, 0, 0.7)"),bordColors.push("rgba(165, 0, 0, 1)")}
    }

    new Chart("sähköhinta", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                label: 'euro',
                maxBarThickness: 40,
                backgroundColor: "orange",
                data: yValues
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                }]
            },
            title: {
                display: true,
                text: "Päivittäinen Sähköhinta"
           
            },
            legend: {
                display: true,
                labels: {
                    color: "red",
                    text: "euro"
                }
            }

        }
        
    })

    new Chart("bartaulu1", {//TauluV.1
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                label: 'euro',
                maxBarThickness: 35,
                backgroundColor: barColors,
                borderColor: bordColors,
                borderWidth: 2,
                data: yValues
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                    gridLines: {
                        //display: false,
                        color: "#000000" 
                    }
                }],
                xAxes: [{
                    gridLines: {
                        //display: false,
                        color: "#ffffff"
                    }  
                }]
            },
            title: {
                display: true,
                text: "Päivittäinen Sähköhinta"
           
            },
            legend: {
                display: false,
                labels: {
                    color: "red",
                    text: "euro"
                }
            }

        }
        
    })

    new Chart("linetaulu1", { //TauluV.2
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                label: 'euro',
                fill: false,
                backgroundColor: "rgb(24, 61, 85, 1)",
                borderColor: "rgb(34, 88, 122, 1)",
                borderWidth: 2,
                data: yValues,
                tension: 0,
                //pointRadius: 0 
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            title: {
                display: true,
                text: "Päivittäinen Sähköhinta"
           
            },
            legend: {
                display: false,
                labels: {
                    color: "red",
                    text: "euro"
                }
            }

        }
        
    })

    new Chart("linetaulu2", { //TauluV.3
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                label: 'euro',
                fill: true,
                backgroundColor: "rgb(34, 88, 122, 1)",
                //borderColor: "rgb(24, 61, 85, 1)",
                //borderWidth: 1,
                data: yValues,
                tension: 0,
                pointRadius: 0
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            title: {
                display: true,
                text: "Päivittäinen Sähköhinta"
           
            },
            legend: {
                display: false,
                labels: {
                    color: "red",
                    text: "euro"
                }
            }

        }
        
    })
</script>


<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<div id="plVersio" style="width:80%;max-width:700px"></div>

<!-- Plotly.js -->

<script>
    const xArray = {{chartHours}};
    const yArray = {{chartPrices}};
    const data = [
        {
            x: xArray,
            y: yArray,
            type: 'bar',
            orientation: "v",
            marker: { color: "rgba(0, 188, 255, 1)" },
            text: 'euro',
            name: 'hinta'
            
    }];

    const layout = { title: "Sähköhinta"};

    Plotly.newPlot('plVersio', data, layout);
</script>




