<h1>Sähkön tuntihinnat seuraavalle 24 tunnille</h1>

<table>
    <tr>
        <th>Päivä</th>
        <th>Tunti</th>
        <th>Hinta (snt/kWh)</th>
    </tr>
    {{#each tableData}}
    <tr><td>{{day}}</td>
        <td>{{hour}}</td>
        <td>{{price}}</td>
    </tr>
    {{/each}}
</table>

<!-- Chart.js -->

<div>
    <canvas id="sähköhinta" style="width:80%;max-width:700px"></canvas> 
</div>

<script
    src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script> 
<script>   
    const xValues = {{chartHours}};
    const yValues = {{chartPrices}};
    // const xValues = [13, 14, 15, 16];
    // const yValues = [31.44, 32.1, 30.5, 29.99];
    const barColors = [];

    for(i = 0; i < yValues.length; i++){
        if(yValues[i] < 0) {barColors.push("rgba(10, 185, 0, 0.8)")}
        if(yValues[i] >= 0 && yValues[i] <=5) {barColors.push("rgba(119, 180, 255, 1)")}
        if(yValues[i] >= 5) {barColors.push("rgba(255, 0, 0, 1)")}
    }

    new Chart("sähköhinta", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                label: 'euro',
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            title: {
                display: true,
                text: "Päivittäinen Sähköhinta"
           
            },
            legend: {
                display: true,
                labels: {
                    color: "orange",
                    text: "euro"
                }
            }

        }
        
    })
</script>


<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<div id="plVersio" style="width:80%;max-width:700px"></div>

<!-- Plotly.js -->

<script>
    const xArray = {{chartHours}};
    const yArray = {{chartPrices}};
    const data = [
        {
            x: xArray,
            y: yArray,
            type: 'bar',
            orientation: "v",
            marker: { color: "rgba(0, 188, 255, 1)" },
            text: 'euro',
            name: 'hinta'
            
    }];

    const layout = { title: "Sähköhinta"};

    Plotly.newPlot('plVersio', data, layout);
</script>




